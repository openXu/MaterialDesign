<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="哈哈哈哈哈哈"
                    android:gravity="center"
                    android:background="#5500ffff"/>
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="哈哈哈哈哈哈"
                    android:gravity="center"
                    android:background="#55ff00ff"/>
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="哈哈哈哈哈哈"
                    android:gravity="center"
                    android:background="#55ffff00"/>
                <com.openxu.md.view.chart.BarVerticalChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="哈哈哈哈哈哈"
                    android:gravity="center"
                    android:background="#5500ffff"/>

                <!--饼状图-->
                <com.openxu.md.view.chart.piechart.PieChartLayout
                    android:id="@+id/myPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_centerVertical="true"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">
                    <com.openxu.md.view.chart.piechart.PieChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />
                    <com.openxu.md.view.chart.piechart.PieChartLableView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" />
                </com.openxu.md.view.chart.piechart.PieChartLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="哈哈哈哈哈哈"
                    android:gravity="center"
                    android:background="#55ff00ff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="哈哈哈哈哈哈"
